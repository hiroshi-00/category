<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="from-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  
  <%= f.fields_for :user_prefectures do |e| %>
    <div class="form-group">
      <%= e.label "出身地" %>
      <%= e.collection_select :birthplace_id, @prefectures, :id, :name, { prompt: "選択してください" } , class: 'form-control' %>
    </div>
  <% end %>
  
  <%= f.fields_for :user_prefectures do |d| %>
    <div class="form-group">
      <%= d.label "現在地" %>
      <%= d.collection_select :current_location_id, @prefectures, :id, :name, { prompt: "選択してください" } , class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
